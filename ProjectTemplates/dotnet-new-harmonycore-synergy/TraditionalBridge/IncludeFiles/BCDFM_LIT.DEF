;
; BCDFM_LIT.DEF 
; 	DFM  Message structure . Used with DFM QUEUE function calls
;
;-------------------------------------------------------------------------------
;
;	MODIFIED	PROGRAMMER	DESCRIPTION
;	--------	----------	------------
;	13-Sep-1992	F. Kline  	Original
;					Modified from DFM_TOOLS:DFM_H.C
;-------------------------------------------------------------------------------
;/*--------------------------------------*/
;/*   Queue Names and default sizes      */
;/*   Must be NAME_SIZE (10) characters  */
;/*   Left-justified, space filled.      */
;/*--------------------------------------*/
LITERAL
	NAME_SIZE		,I4	,10
	FILE_NAME_SIZE		,I4	,40
	DFM_Q_NAME		,A10	,"DFM_Q     "
	ACK_Q_NAME   		,A10	,"DFM_ACK   "
	DEVCOM_DATA_Q_SIZE	,I4	,32
	DEVCOM_ACK_Q_SIZE	,I4	,1

;/*--------------------------------------*/
;/*      States of the Batch Flag        */
;/*--------------------------------------*/
	DFM_BATCH          		,A1	,'B'
	DFM_INTERACTIVE    		,A1	,'I'

;/*--------------------------------------*/
;/*  States of the Sys Msg Flag          */
;/*--------------------------------------*/
                                         ;the NUL (0) char indicates- not set.
	SYS_MSG         	,A1	,'S' ;system message
	DATA_MSG        	,A1	,'D' ;data message - not a system message

;/*--------------------------------------*/
;/*  System Messages                     */
;/*  Maximum 10 characters long, left-   */
;/*  justified, space-filled.            */
;/*--------------------------------------*/
;/* into system:                         */
	DFMINTER        	,A10,	"DfmInter  "
	DFMNOINTER      	,A10,	"DfmNoInter"
	DFMRECVFIL      	,A10,	"DfmRecvFil"
	DFMSENDFIL      	,A10,	"DfmSendFil"
	DFMSETTIME      	,A10,	"DfmSetTime"
;/* out of system:                       */
	DFMFILRESP      	,A10,	"DfmFilResp"
	DFMHLTTRAN      	,A10,	"DfmHltTran"
	DFMRSMTRAN      	,A10,	"DfmRsmTran"
	DFMSYSHALT      	,A10,	"DfmSysHalt"
                                        
;/*--------------------------------------*/
;/*  Sizes (field sizes, data sizes)     */
;/*--------------------------------------*/
	MAX_DATA_SIZE		,I4,            1024
	NODE_SIZE               ,I4,		6
	MSG_NUM_SIZE            ,I4,		6
	DATETIME_SIZE           ,I4,		19
	RESERV_SIZE             ,I4,		5
	MSG_TYPE_SIZE           ,I4,		20
	HEADER_SIZE		,I4,		64
	MESSAGE_SIZE		,I4,		1088
;/*--------------------------------------*/
;/*  Return Codes                        */
;/*--------------------------------------*/
	RC_OK               	,I4,		0
	RC_EXIT             	,I4,		1  ;/* exit routine           */
	RC_EOF              	,I4,		2  ;/* end of file encountered*/
	RC_NOT_FOUND        	,I4,		20 ;/* this item could not be
						   ;   found   */

;/*--------------------------------------*/
;/*  Misc                                */
;/*--------------------------------------*/
	SET                 	,I4,		1
	CLEAR               	,I4,		0
	NOWAIT			,I4,		0
	WAIT			,I4,		-99
