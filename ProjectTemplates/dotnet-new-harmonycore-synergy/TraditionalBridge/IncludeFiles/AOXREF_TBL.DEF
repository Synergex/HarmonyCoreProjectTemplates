; AOXREF_TBL.DEF
;
;	A.O. Smith Cross Reference Code Table.
;
;	File Organization: Indexed (Isam)
;	      Record Size: 50
;	      Primary Key: CHX_KEY0 --> Type & Code
;
;-------------------------------------------------------------------------------
;	Modified	Programmer	Description
;	--------	----------	-----------
;	21-May-92	T. Morbach	Original
;
;-------------------------------------------------------------------------------
;
RECORD AOXREF_TBL
	CX_XREF_TYPE	,A1	; Cross Reference Type
				; --------------------
				; "1" = Ship From Location Codes
				; "2" = Ship To Location Codes
				; "3" = Bill To Codes

	CX_XREF_CODE	,A7	; Code to Cross Reference
	CX_XREF_ABBRV	,A5	; CARaS Abbreviation
	CX_TIME_ZONE	,A2	; Ship From Location Local Time Zone (Type=1)
			,A35	; Filler
RECORD AOX_KEY0, X
	;
	; Primary Key, No Duplicates, No Changes.
	;
	K0_CX_XREF_TYPE	,A%SIZE(CX_XREF_TYPE)	; Cross Reference Type
	K0_CX_XREF_CODE	,A%SIZE(CX_XREF_CODE)	; Code to Cross Reference

RECORD AOX_KEY1
	;
	; Alternate Key, No Duplicates, Allow Changes
	;
	K1_CX_XREF_TYPE		,A%SIZE(CX_XREF_TYPE)	; Cross Reference Type
	K1_CX_XREF_ABBRV	,A%SIZE(CX_XREF_ABBRV)	; CARaS Abbrv
