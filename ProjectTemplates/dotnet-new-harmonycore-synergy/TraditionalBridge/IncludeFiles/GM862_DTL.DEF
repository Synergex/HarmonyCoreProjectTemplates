RECORD GM862_DTL
;
; GM862_DTL.DEF	- GM DAILY MATERIAL RELEASE DETAIL	(New)
;
; 	STRUCTURE: 	SEQUENTIAL
; 	RECORD LEN: 	275
;
;-------------------------------------------------------------------------------
;              ------- Record Definition -------
;-------------------------------------------------------------------------------
;
	DPRTNO		,A30		;PART NUMBER
	DDEST		,D5		;DESTINATION
	DDOCK		,A5		;DOCK CODE
	DRELNO		,D6		;RELEASE NUMBER
	DRDATE		,D8		;REQUIRED DATE (DDMMYY)
					;
	DNETQ		,D7		;NET QUANTITY REQUIRED FOR DATE
	DTIME		,24D4		;TIME SLOT (HHMM)
	DQUAN		,24D5		;QUANTITY REQUIRED

RECORD	,X
	KEYDSR		,A52

RECORD	,X		; REDEFINE NUMERIC TO ALPHA FOR NON QUANTITY/DATE FIELDS
	DPRTNO_A	,A30		;PART NUMBER
	DDEST_A		,A5		;DESTINATION
	DDOCK_A		,A5		;DOCK CODE
	DRELNO_A	,D6		;RELEASE NUMBER
	DRDATE_A	,D8		;REQUIRED DATE (DDMMYY)
	DNETQ_A		,D7		;NET QUANTITY REQUIRED FOR DATE
	DTIME_A		,24D4		;TIME SLOT (HHMM)
	DQUAN_A		,24D5		;QUANTITY REQUIRED

.IFDEF XX862_DTL_WORK
RECORD GM862_DTL_WORK
;
; 			GM DAILY MATERIAL RELEASE DETAIL - SPLIT PROCESSING 
;			TEMPORARY WORK FILE
;
;			Field defined in the record are identical to 
;			GM862_DTL with the exception of the additional
;			fields in this record of DCOMP_W and DSEQN_W.
;			Since the Unsplit file is not sorted,
;			the sequence number is used to maintain the same
;			sequence when the work file is sorted.
;
; 	STRUCTURE: 	SEQUENTIAL
; 	RECORD LEN: 	277
;	SORT KEY:	DCOMP_W, DSEQN_W
;
;-------------------------------------------------------------------------------
;              ------- Record Definition -------
;-------------------------------------------------------------------------------
;
	DCOMP_W		,A8		;COMPANY_CODE
	DSEQN_W		,D5		;SEQUENCE NUMBER
	DPRTNO_W	,A30		;PART NUMBER
	DDEST_W		,D5		;DESTINATION
	DDOCK_W		,A5		;DOCK CODE
	DRELNO_W	,D6		;RELEASE NUMBER
	DRDATE_W	,D8		;REQUIRED DATE (DDMMYY)
	DNETQ_W		,D7		;NET QUANTITY REQUIRED FOR DATE
	DTIME_W		,24D4		;TIME SLOT (HHMM)
	DQUAN_W		,24D5		;QUANTITY REQUIRED
RECORD	,X
			,A8		; COMPANY CODE
			,D5		; SEQUENCE NUMBER
	GM862U_DTL	,A%SIZE(GM862_DTL) ; UNSPLIT HEADER
.ENDC

.IFDEF XX862_DTL_TOTALS
RECORD GM862_DTL_TOTALS
;
;			GM DAILY MATERIAL RELEASE DETAIL - SPLIT PROCESSING 
;			WORKING STORAGE BUFFER OF QUANTITY FIELDS.
;			
;			The quantity fields accumulate the total quantities
;			that have been split to the multiple companies.
;			This buffer is not written to any file.
	DNETQ_T		,D7		;NET QUANTITY REQUIRED FOR DATE
	DQUAN_T		,24D5		;QUANTITY REQUIRED
.ENDC
