RECORD GM862_HDR
;
; GM862_HDR.DEF	- GM DAILY MATERIAL RELEASE HEADER	(New)
;
; 	STRUCTURE: 	SEQUENTIAL
; 	RECORD LEN: 	368
;
;-------------------------------------------------------------------------------
;              ------- Record Definition -------
;-------------------------------------------------------------------------------
;
	HPRTNO		,A30	   	;PART NUMBER
	HDEST		,D5		;DESTINATION
	HRECVD		,A5		;RECEIVING DOCK CODE
	HRELNO		,D6		;RELEASE NUMBER (YYDDDN)
					;
	HRELDT		,D8		;RELEASE ISSUE DATE
	HRELPT		,D5		;RELEASE PLANT
	HTIMED		,A1		;TIME DESIGNATOR
	HUOM		,A2		;UNIT OF MEASURE
	HPSTAT		,A1		;PART STATUS CODE
	HFRSDT		,D8		;FIRST DAILY REQUIREMENT DATE
	HLSHPD		,D8		;LAST SHIP DATE
	HCUMSD		,D8		;CUM START DATE
	HPCUMS		,D9		;PRIOR CUM SHIPPED
	HPCUMR		,D9		;PRIOR CUM REQUIRED
	HSHIPC		,A2		;SHIP CODE
	HDAYQU		,36D7		;PLANNED DAY QTYS 
					;   (HDAYQU(1) = CURRENT SHIP DAY)
	HSUPP		,A9		;SUPPLIER ID
	HSTOCKCODE	,A2		;PRIME STOCKMAN CODE POS 73-74 OF B1 REC
	HDELLOC		,A5		;PRIME DELIVERY LOCATION 
					;   POS 14-18 B1 REC
		        ,A1
RECORD	,X
	KEYDMR		,A46

RECORD	,X		; REDEFINE NUMERIC TO ALPHA FOR NON QUANTITY/DATE FIELDS
	HPRTNO_A	,A30	   	;PART NUMBER
	HDEST_A		,A5		;DESTINATION
	HRECVD_A	,A5		;RECEIVING DOCK CODE
	HRELNO_A	,A6		;RELEASE NUMBER (YYDDDN)
	HRELDT_A	,D8		;RELEASE ISSUE DATE
	HRELPT_A	,A5		;RELEASE PLANT
	HTIMED_A	,A1		;TIME DESIGNATOR
	HUOM_A		,A2		;UNIT OF MEASURE
	HPSTAT_A	,A1		;PART STATUS CODE
	HFRSDT_A	,D8		;FIRST DAILY REQUIREMENT DATE
	HLSHPD_A	,D8		;LAST SHIP DATE
	HCUMSD_A	,D8		;CUM START DATE
	HPCUMS_A	,D9		;PRIOR CUM SHIPPED
	HPCUMR_A	,D9		;PRIOR CUM REQUIRED
	HSHIPC_A	,A2		;SHIP CODE
	HDAYQU_A	,36D7		;PLANNED DAY QTYS 
					;   (HDAYQU(1) = CURRENT SHIP DAY)
	HSUPP_A		,A9		;SUPPLIER ID
	HSTOCKCODE_A	,A2		;PRIME STOCKMAN CODE POS 73-74 OF B1 REC
	HDELLOC_A	,A5		;PRIME DELIVERY LOCATION 
					;   POS 14-18 B1 REC
		        ,A1

.IFDEF XX862_HDR_WORK
RECORD GM862_HDR_WORK
;
; 			GM DAILY MATERIAL RELEASE DETAIL - SPLIT PROCESSING 
;			TEMPORARY WORK FILE
;
;			Field defined in the record are identical to 
;			to GM862_HDR with the exception of the additional
;			fieldS in this record of HCOMP_W, HSEQN_W, 
;			and HDPCNT_W. Since the Unsplit file is not sorted,
;			the sequnce number is used to maintain the same
;			sequence when the work file is sorted.
;
; 	STRUCTURE: 	SEQUENTIAL
; 	RECORD LEN: 	384
;	SORT KEY:	HCOMP_W, HSEQN_W
;
;-------------------------------------------------------------------------------
;              ------- Record Definition -------
;-------------------------------------------------------------------------------
;
	HCOMP_W		,A8		;COMPANY_CODE
	HSEQN_W		,D5		;SEQUENCE NUMBER
	HPRTNO_W	,A30	   	;PART NUMBER
	HDEST_W		,D5		;DESTINATION
	HRECVD_W	,A5		;RECEIVING DOCK CODE
	HRELNO_W	,D6		;RELEASE NUMBER (YYDDDN)
	HRELDT_W	,D8		;RELEASE ISSUE DATE
	HRELPT_W	,D5		;RELEASE PLANT
	HTIMED_W	,A1		;TIME DESIGNATOR
	HUOM_W		,A2		;UNIT OF MEASURE
	HPSTAT_W	,A1		;PART STATUS CODE
	HFRSDT_W	,D8		;FIRST DAILY REQUIREMENT DATE
	HLSHPD_W	,D8		;LAST SHIP DATE
	HCUMSD_W	,D8		;CUM START DATE
	HPCUMS_W	,D9		;PRIOR CUM SHIPPED
	HPCUMR_W	,D9		;PRIOR CUM REQUIRED
	HSHIPC_W	,A2		;SHIP CODE
	HDAYQU_W	,36D7		;PLANNED DAY QTYS 
					;   (HDAYQU(1) = CURRENT SHIP DAY)
	HSUPP_W		,A9		;SUPPLIER ID
	HSTOCKCODE_W	,A2		;PRIME STOCKMAN CODE POS 73-74 OF B1 REC
	HDELLOC_W	,A5		;PRIME DELIVERY LOCATION 
					;   POS 14-18 B1 REC
		       	,A1
	HDPCNT_W	,D3.2		;PERCENT OF TOTAL SPLIT

RECORD	,X
			,A8		; COMPANY CODE
			,D5		; SEQUENCE NUMBER
	GM862U_HDR	,A%SIZE(GM862_HDR) ; UNSPLIT HEADER
.ENDC

.IFDEF XX862_HDR_TOTALS
RECORD GM862_HDR_TOTALS
;
;			GM DAILY MATERIAL RELEASE DETAIL - SPLIT PROCESSING 
;			WORKING STORAGE BUFFER OF QUANTITY FIELDS.
;			
;			The quantity fields accumlate the total quantities
;			that have been split to the multiple companies.
;			This buffer is not written to any file.
;
	HPCUMS_T	,D9		;PRIOR CUM SHIPPED
	HPCUMR_T	,D9		;PRIOR CUM REQUIRED
	HDAYQU_T	,36D7		;PLANNED DAY QTYS 
					;   (HDAYQU(1) = CURRENT SHIP DAY)
	HDPCNT_T	,D3.2		;PERCENT OF TOTAL SPLIT
.ENDC
