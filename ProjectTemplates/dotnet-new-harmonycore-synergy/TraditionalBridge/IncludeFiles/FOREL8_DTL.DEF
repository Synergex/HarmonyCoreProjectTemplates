RECORD FOREL8_DTL
	FD8_PARTNO		,A30	; Ford Part Number
	FD8_RELNO		,A5	; Release Number
	FD8_DEST		,A5	; Destination Code
	FD8_CUM_REQ		,D8	; Cum Required
	FD8_CUM_DATE		,D6	; Date Cum is Required
	FD8_SUPP		,A5	; Supplier ID
				,A25	; Filler
;
RECORD	FD8_KEY
	FD8_SUPP_K		,A%SIZE(FD8_SUPP)	; Supplier ID
	FD8_PARTNO_K		,A%SIZE(FD8_PARTNO)	; Ford Part Number
	FD8_RELNO_K		,A%SIZE(FD8_RELNO)	; Release Number
	FD8_DEST_K		,A%SIZE(FD8_DEST)	; Destination Code

