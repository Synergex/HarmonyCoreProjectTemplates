	RLN_DIV_CODE	,A15	; Division Code			| 102 thru 116
	RLN_MY		,A1	; Model Year			| 117 thru 117
	RLN_DEST_CODE	,A15	; Destination Code		| 118 thru 132
	RLN_SEQUENCE	,D5	; Sequence Number		| 133 thru 137
	RLN_NOTES	,A80	; Free Form Notes		| 138 thru 217
	RLN_COLOR_CODE  ,A8	; Color code                    | 218 thru 225
			,A10	; filler			| 226 thru 235

RECORD,X
			,A16
	RLN_KEY1	,A121		; sort key RLN_SUPP_ID thru RLN_SEQUENCE

RECORD,X
			,A16
	RLN_KEY0	,A33		; partial key - RLH_SUPP_ID thru RLH_RELNO
