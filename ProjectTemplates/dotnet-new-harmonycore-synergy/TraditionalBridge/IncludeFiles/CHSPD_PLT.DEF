	PL_RACK_SIZE	,D3	; Shipping Rack Size
	PL_RACK_WGT	,D6	; Shipping Rack Weight (XXXX.XX)
	PL_SEQ_INCR	,D3	; Plant Sequence Number Increment (XXX)
	PL_LAST_SEQ	,D7	; Last Broadcast Sequence Number Received 
	PL_LAST_SHIP	,D7	; Last Sequence Number Shipped
				;
	PL_TRUCK_LBL	,A1	; Truck Label Required (Y/N)
