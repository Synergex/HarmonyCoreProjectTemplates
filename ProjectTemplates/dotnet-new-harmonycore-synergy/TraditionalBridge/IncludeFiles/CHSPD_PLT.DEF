	PL_SUPP_CODE	,A6	; Supplier Code
	PL_CARRIER	,A23	; Carrier
	PL_ROUTING	,A30	; Routing Information
	PL_COMMENT	,8A70	; Bill Of Lading Comments
				;
	PL_USER_1	,A20	; User Field Number 1
	PL_USER_2	,A20	; User Field Number 2
	PL_USER_3	,A20	; User Field Number 3
