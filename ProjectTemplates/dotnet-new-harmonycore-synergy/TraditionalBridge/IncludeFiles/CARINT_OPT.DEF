RECORD CARINT_OPT
;
; CARINT_OPT.DEF - CARaS Release Loading Options File
;
;	Stucture:	ISAM
;	Record Length:	256
;
;	18-FEB-93	T. Bunker	Added RIO_RELDT to filler.
;	4-Nov-93	B.Sparks	Changed RIO_START_REQDT, RIO_RELDT
;					and RIO_JITDT to be Alphanumeric -- 
;	We're not going to store actual dates anymore.  We're going to store
;	ALL, TODAY, or MONDAY.
;	01-Dec-93	T. Bunker	Expand part number to 30.  Expand 
;					record size to 256.
;-------------------------------------------------------------------------------
;              ------- Record Definition -------
;-------------------------------------------------------------------------------
				;
	RIO_OPTION_CODE	,A5	; CARaS Release Loading Option Code
	RIO_TP_DESIG	,A2	; Trading Partner Designator (Blank = All)
				;
	RIO_DIV_ABBRV	,A5	; Division Abbreviation (Blank = All)
	RIO_MY		,A1	; Model Year 
	RIO_DEST_ABBRV	,A5	; Destination Abbrevation (Blank = All)
				;
	RIO_BEGIN_PART	,A30	; Starting Part Number (Blank = All)
	RIO_END_PART	,A30	; Ending Part Number
				;
	RIO_WKS_EXPORT	,D2	; Number of weeks to export
				; 99 = All
	RIO_EXPORT_DATE	,D6	; Cutoff Date to export requirements
				;
	RIO_WKS_ALLOC	,D2	; Number of weeks to allocate
				; 99 = All 
	RIO_ALLOC_DATE	,D6	; Cutoff Date to allocate requirements
				;
	RIO_DO_JIT	,D1	; (1=Y/0=N) Should JIT's be exported
	RIO_DO_FIRM	,D1	; (1=Y/0=N) Should FIRM's be exported
	RIO_DO_FORECAST	,D1	; (1=Y/0=N) Should FORECAST's be exported
	RIO_DO_FAB_RAW	,D1	; (1=Y/0=N) Should FAB & RAW be exported
				;
	RIO_START_REQDT	,A6	; 'Monday', 'Today', or 'All'
	RIO_REQDT_PFKEY	,D1	; <PF> Key Pressed for RIO_START_REQDT above
				;
	RIO_REQ_OF_ZERO	,D1	; (1=Y/0=N) Load zero NET requirements
				;
				; This is the information for Batch
				;======================================
	RIO_RUN_MON	,A1	; (Y/N) Should run on Monday ?
	RIO_RUN_TUE	,A1	; (Y/N) Should run on Tuesday ?
	RIO_RUN_WED	,A1	; (Y/N) Should run on Wednesday ? 
	RIO_RUN_THU	,A1	; (Y/N) Should run on Thursday ? 
	RIO_RUN_FRI	,A1	; (Y/N) Should run on Friday ? 
	RIO_RUN_SAT	,A1	; (Y/N) Should run on Saturday ? 
	RIO_RUN_SUN	,A1	; (Y/N) Should run on Sunday ? 
				;======================================
	RIO_TIME_MON	,D4	; Time to run on Monday (1300 = 1:00pm)
	RIO_TIME_TUE	,D4	; Time to run on Tuesday 
	RIO_TIME_WED	,D4	; Time to run on Wednesday
	RIO_TIME_THU	,D4	; Time to run on Thursday
	RIO_TIME_FRI	,D4	; Time to run on Friday
	RIO_TIME_SAT	,D4	; Time to run on Saturday
	RIO_TIME_SUN	,D4	; Time to run on Sunday
				;======================================
	RIO_NEXT_MON	,A1	; (Y/N) Resubmit next week Monday ?
	RIO_NEXT_TUE	,A1	; (Y/N) Resubmit next week Tuesday ?
	RIO_NEXT_WED	,A1	; (Y/N) Resubmit next week Wednesday ?
	RIO_NEXT_THU	,A1	; (Y/N) Resubmit next week Thursday ? 
	RIO_NEXT_FRI	,A1	; (Y/N) Resubmit next week Friday ?
	RIO_NEXT_SAT	,A1	; (Y/N) Resubmit next week Saturday ? 
	RIO_NEXT_SUN	,A1	; (Y/N) Resubmit next week Sunday ?
				;
	RIO_RELDT	,A6	; Starting release date
				; 'Monday', 'Today', or 'All'
	RIO_JITDT	,A6	; Starting jit date
				; 'Monday', 'Today', or 'All'
	RIO_FILLER	,A96	; Filler for future use	

;-------------------------------------------------------------------------------
;              ------- Key Definitions ------
;-------------------------------------------------------------------------------
RECORD RIO_KEY0, X		; Key 0 - RIO_OPTION_CODE
			,A5
