; RESEND_TBL.DEF
;
;	Flat File layout description for Generation of X12 transaction
;	sets. This is a generic description and is not directly tied
;	into any particular Transaction dictionary, that is it can be
;	referenced by multiple dictionaries.
;
;	STRUCTURE = ISAM
;	RECORD LENGTH = 292
;
;--------------------------------------------
;	---- RECORD DESCRIPTION ----
;--------------------------------------------
RECORD 	RESEND_TBL
	SD_LAYOUT_NAME 		,A15		; File Layout Name
	SD_FIELD_NO    		,D3		; Field Number

	SD_DESCRIPTION 		,A30		; Description used for reference

	SD_FIELD_NAME  		,A15		; Field Name
	SD_FIELD_DESCR 		,A30		; Field description
	SD_MANDATORY   		,A1		; Mandatory field - M,C,O or blank
	SD_MIN_LENGTH  		,D2		; Minimum field length
	SD_MAX_LENGTH  		,D2		; Maximum field length
	SD_DATA_TYPE   		,A2		; Valid data type
			       			; A = alphanumeric
			       			; N = numeric
			       			; R = real
			       			; AE = alpha with editing
			       			; NE = number with editing
	SD_DECIMAL_POS		,D1		; Decimal position
	SD_FILE_TYPE		,A1		; I = ISAM
						; R = RELATIVE
						; S = SEQUENTIAL
						; NOT USED AT THIS TIME
	SD_START_POS		,D5		; This is the starting position
						; of this field in the flat file
	SD_CALC_FLAG		,D1		; 1 = Recalculate the starting
						; positions for all the fields
						; in this file layout.
	SD_KEY_FIELD		,D1		; 1 = Key , 0 = end of keys

				,A183
;
; ----	KEY DEFINITIONS ----
;
RECORD	,X
	SEND_KEY0		,A18		; KEY0 = LAYOUT_NAME & FIELD_NO.
				,A274		; NO DUPLICATES!
RECORD	,X
	SEND_KEY1 		,A15		; KEY1 = LAYOUT_NAME
						; DUPLICATES ALLOWED 
				,A277
RECORD	,X
	SD_LAYOUT_1		,A15
				,A33
	SD_FIELD_KEY1		,A15		; SEARCH KEY IN RECALC_SUB
				,A229

RECORD	,X
	SEG_SERCH_SKEY		,A63

;-------------------------
;--- ALTERNATE FILE DEF --
;-------------------------

.IFDEF RESEND_TBL_ALT

RECORD
	A_RESEND_TBL	,A%SIZE(RESEND_TBL)

RECORD	,X
	A_LAYOUT_NAME 		,A15		; File Layout Name
	A_FIELD_NO    		,D3		; Field Number
	A_DESCRIPTION 		,A30		; Description used for reference
	A_FIELD_NAME  		,A15		; Field Name
	A_FIELD_DESCR 		,A30		; Field description
	A_MANDATORY   		,A1		; Mandatory field - M,C,O or blank
	A_MIN_LENGTH  		,D2		; Minimum field length
	A_MAX_LENGTH  		,D2		; Maximum field length
	A_DATA_TYPE   		,A2		; Valid data type
	A_DECIMAL_POS		,D1		; Decimal position
	A_FILE_TYPE		,A1		; I = ISAM
	A_START_POS		,D5		; This is the starting position
	A_CALC_FLAG		,D1		; 1 = Recalculate the starting
	A_KEY_FIELD		,D1
				,A183

RECORD	,X
	A_SEND_KEY0		,A18		; KEY0 = LAYOUT_NAME & FIELD_NO.
				,A274		; NO DUPLICATES!

RECORD	,X
	A_SEND_KEY1 		,A15		; KEY1 = LAYOUT_NAME
				   		; DUPLICATES ALLOWED 
				,A277		; PRIMARY KEY 0

.ENDC
